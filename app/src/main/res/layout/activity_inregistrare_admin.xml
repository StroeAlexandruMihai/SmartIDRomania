<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inregistrare_admin"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg1">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:background="@drawable/round_edittext">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="johndoe@gmail.com"
            android:id="@+id/edit_text_email_register"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_edittext">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Parola dvs."
            android:id="@+id/edit_text_password_register"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_edittext"
        >

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Numele intreg"
            android:id="@+id/edit_text_fullname_register"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buton_inregistrare"
            android:text="Inregistrare"
            android:textColor="@android:color/black"
            android:background="@drawable/round_button"/>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_gravity="center"
        android:src="@drawable/logo2"
        android:id="@+id/logo_img_register"/>

</LinearLayout>